<h2>Buscar autores</h2>
<form action="/authors" method="GET">
    <label>Nombre</label>
    <input type="texy" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Buscar</button>
</form>
<br>
<!--Loop entre todos los autores de la pÃ¡gina-->
<% authors.forEach(author =>  { %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id %>">Ver</a>
    <a href="/authors/<%= author.id %>/edit">Editar</a>
    <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
<% }) %>