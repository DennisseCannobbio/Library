<h2 class="page-header">Buscar Libros</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Título</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>Publicado Antes</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>

        <div class="form-item">
            <label>Publicado Despúes</label>
        <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
    </div>

    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>
<br>
<div>
<!--Loop entre todos los libros de la página-->
<% books.forEach(book =>  { %>
    <a href="/books/<%= book.id %>">
    <img height="150" width="100" src="<%= book.coverImagePath %>">
    </a>
<% }) %>
</div>
